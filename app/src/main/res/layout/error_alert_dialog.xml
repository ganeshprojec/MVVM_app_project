<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error_warning_alert_dialog"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">


    <TextView
        android:id="@+id/title_Alert_Dialog"
        android:textSize="@dimen/text_size_x_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_small"
        android:background="@color/alert_dialog_title_background"
        android:padding="@dimen/margin_padding_normal"
        android:text="@string/str_item_enquiry"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
         />

    <ImageView
        android:id="@+id/error_worning_icon"
        android:layout_width="@dimen/icon_xl"
        android:layout_height="@dimen/icon_xl"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintTop_toBottomOf="@+id/title_Alert_Dialog"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/message_Alert_Dialog"
        android:textSize="@dimen/text_size_x_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_large"
        android:padding="@dimen/margin_padding_normal"
       android:text="@string/alert_error_message"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@id/error_worning_icon"

        app:layout_constraintTop_toBottomOf="@+id/title_Alert_Dialog"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textOK_alert_dialog"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_xx_normal"
        android:text="@string/ok"
        android:padding="@dimen/margin_padding_normal"
        app:layout_constraintTop_toBottomOf="@+id/message_Alert_Dialog"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="@dimen/margin_padding_large"
       app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>