<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/printerCount"
        style="@style/text_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_large"
        android:paddingTop="@dimen/margin_padding_small"
        android:text="Printer 1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/printerName"
        style="@style/text_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_large"
        android:text="East Bank 1"
        android:paddingTop="@dimen/margin_padding_small"
        android:textSize="@dimen/text_size_x_normal"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/printerCount"
        tools:ignore="MissingConstraints" />

      <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@color/view_divider"
          tools:ignore="MissingConstraints"
          android:layout_margin="@dimen/margin_padding_normal"
          app:layout_constraintTop_toBottomOf="@+id/printerName"/>


</androidx.constraintlayout.widget.ConstraintLayout>