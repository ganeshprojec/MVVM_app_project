<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:id="@+id/cl_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_x_normal"
        tools:ignore="MissingConstraints" >

    <TextView
        android:id="@+id/product_item_name"
        style="@style/text_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="East Bank 1"
        android:paddingTop="@dimen/margin_padding_small"
        android:textSize="@dimen/text_size_x_normal"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/productCode"
        style="@style/text_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="@dimen/margin_padding_small"
        android:text="Printer 1"
        app:layout_constraintTop_toBottomOf="@+id/product_item_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/productDescText"
        style="@style/text_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="@dimen/margin_padding_small"
        android:text="@string/description"
        app:layout_constraintTop_toBottomOf="@+id/productCode"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/productDescription"
        style="@style/text_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_padding_tiny"
        android:text="xxxxxxxxxxxxxxxx"
        app:layout_constraintTop_toBottomOf="@+id/productDescText"
        tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <CheckBox
        android:id="@+id/check_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/margin_padding_x_small"
        app:layout_constraintEnd_toEndOf="parent"
          android:visibility="invisible"
        android:clickable="true"

       />



      <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@color/view_divider"
          tools:ignore="MissingConstraints"
          android:layout_margin="@dimen/margin_padding_normal"
          app:layout_constraintTop_toBottomOf="@+id/itemLayout"/>


</androidx.constraintlayout.widget.ConstraintLayout>