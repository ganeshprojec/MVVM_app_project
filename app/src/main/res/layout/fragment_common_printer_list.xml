<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/amend_lots"
    android:background="@color/color_light_gray"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="com.jlp.mvvm_jlp_project.view.common_printer_list.CommonPrinterListFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.JLP_Layouts.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <!-- layout="@layout/layout_item_enquiry_top_header"-->
        <include
            android:id="@+id/amaend_lots_top_header"
            layout="@layout/layout_item_enquiry_top_header" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_common_printerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_padding_large"
        android:layout_marginLeft="@dimen/margin_padding_x_normal"
        android:layout_marginRight="@dimen/margin_padding_x_normal"
        app:layout_constraintTop_toBottomOf="@+id/top_appBar"
        tools:ignore="MissingConstraints"
        />

</androidx.constraintlayout.widget.ConstraintLayout>